@model IPagedList<WebsiteBanCaCanhKH.Models.HangHoa>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Trang Chủ";
}

<div class="container">
    <!--Danh Muc-->
    <div class="col-lg-4 col-sm-4 col-md-4 col-xs-4">
        <a href='@Url.Action("DanhSachCa", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/cacanh.png")' />Cá</a>
        <a href='@Url.Action("DanhSachHo", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/hoca.png")'>Hồ</a>
        <a href='@Url.Action("DanhSachMayOxy", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/mayoxy.png")'>Máy oxy</a>
        <a href='@Url.Action("DanhSachCayTS", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/caythuysinh.png")'>Cây thủy sinh</a>
        <a href='@Url.Action("DanhSachDen", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/den.png")'>Đèn</a>
        <a href='@Url.Action("DanhSachMayBom", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/may-bom.jpg")'>Máy bơm</a>
        <a href='@Url.Action("DanhSachTA", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/thucan.png")'>Thức ăn</a>
        <a href='@Url.Action("DanhSachThuoc", "DSSanPham")' class="list-group-item"><img src='@Url.Content("~/img/slider/thuoc.png")'>Thuốc</a>
    </div>
    <!--Banner-->
    <div class="col-lg-8 col-sm-8 col-md-8 col-xs-8 carousel slide">
        <div id="carousel1" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#carousel1" data-slide-to="0" class="active"></li>
                <li data-target="#carousel1" data-slide-to="1" class=""></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="img-responsive image-slider" src="~/img/slider/img01.jpg" alt="thumb" style="width:800px">
                    <div class="carousel-caption"> </div>
                </div>
                <div class="item">
                    <img class="img-responsive image-slider" src="~/img/slider/img02.jpg" alt="thumb" style="width:800px">
                    <div class="carousel-caption"></div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel1" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="right carousel-control" href="#carousel1" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </div>
    </div>
</div>
<div class="container">
    <h1 class="text-center" style="font-size:50px;">Danh Sách Sản Phẩm</h1>
    <div class="float:left">
        @foreach (var item in Model)
        {
            <div class="col-sm-3 col-md-3 col-lg-3 col-xs-4">
                <div class="thumbnail" style="text-align:center;">
                    <img src="~/img/sanpham/@item.Anh" alt="Thumbnail Image 1" class="img-responsive img-rounded" style="height:200px; width:250px;">
                    <div class="caption">
                        <h3>@item.TenHang</h3>
                        <p style="color: darkgreen; font-weight: bold">Giá:@string.Format("{0:#,##0,0}", @item.Gia) VNĐ</p>
                        <p>
                            <a href="@Url.Action("ThemGioHang", "GioHang", new { ms = item.MaHang, url = Request.Url.ToString()})" class="btn btn-danger" role="button">
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
    <div class="text-right container">
        Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    </div>
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewBag.Keyword }), PagedListRenderOptions.PageNumbersOnly)
    </div>
    <style>
        .MenuTrang {
            display: inline;
            text-align: center;
        }
    </style>



