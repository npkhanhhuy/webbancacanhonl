
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<table align="center" style="font-weight:bold; margin-bottom:90px; border:1px;">
    <h1 style="text-align:center; color:red;">ĐĂNG KÝ</h1>
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(true)
<tr>
    <td>Họ tên:</td>
    <td>@Html.TextBox("HoTen")</td>
    <td style="color:red"><i>@ViewData["err1"]</i></td>
</tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN")</td>
            <td style="color:red"><i>@ViewData["err2"]</i></td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>@Html.Password("MatKhau")</td>
            <td style="color:red"><i>@ViewData["err3"]</i></td>
        </tr>
        <tr>
            <td style="padding-right:10px;">Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL")</td>
            <td style="color:red"><i>@ViewData["err4"]</i></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>@Html.TextBox("Email")@ViewData["err7"] @ViewData["err8"]</td>
            <td style="color:red"><i>@ViewData["err5"]</i></td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@Html.TextBox("SDT")</td>
            <td style="color:red"><i>@ViewData["err6"]</i></td>
        </tr>
        <tr>
            <td>Ngày sinh:</td>
            <td><input type="date" name="NgaySinh" /></td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td>@Html.TextBox("DiaChi")</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
                <input type="reset" value="Xóa Thông Tin" />
            </td>
        </tr>
    }
</table>

