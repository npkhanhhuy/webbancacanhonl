@model IPagedList<WebsiteBanCaCanhKH.Models.HangHoa>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "DanhSachCa";
}

<h2 class="text-center">Danh Sách Cá</h2>

<div class="container">
    @foreach (var item in Model)
    {

        <div class="col-sm-3 col-md-3 col-lg-3 col-xs-4">
            <div></div>
            <div class="thumbnail" style="text-align:center;">
                <img src="~/img/sanpham/@item.Anh" alt="Thumbnail Image 1" class="img-responsive img-rounded" style="height:200px; width:250px;">
                <div class="caption">
                    <h3>@item.TenHang</h3>
                    <p style="color: darkgreen; font-weight: bold">Giá:@string.Format("{0:0,00}", item.Gia) VNĐ</p>
                    <p>
                        <a href="@Url.Action("ThemGioHang", "GioHang", new { ms = item.MaHang, url = Request.Url.ToString()})" class="btn btn-danger" role="button">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    }

</div>
<div class="text-right container">
    Trang: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
</div>
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { iMaHang = ViewBag.MaHang, page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>
