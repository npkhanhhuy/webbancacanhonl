@{
    ViewBag.Title = "Index";
    Layout = null;
}
<style type="text/css">
    td {
        height: 40px;
    }
</style>
<div style="margin-top: 200px;">
    <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
    <h2 style="text-align: center; color: red; ">ĐĂNG NHẬP</h2>
    <table align="center" style="font-weight:bold;">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr>
                <td style="padding-right:10px;">Tên đăng nhập: </td>
                <td>
                    @Html.TextBox("TenDN")
                    @ViewData["Err1"]
                </td>
            </tr>

            <tr>
                <td style="padding-right:10px;">Mật khẩu: </td>
                <td>
                    @Html.Password("MatKhau")
                    @ViewBag.Err2
                </td>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" class="btn-primary" />
                </td>
            </tr>

        }
    </table>
</div>

